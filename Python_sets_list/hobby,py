tennis = {'Evans', 'Stone', 'Roberts', 'Mills', 'Lewis', 'Morgan'}

dota = {'Grant', 'Morgan', 'Evans', 'Mills', 'Jackson', 'Bradley',}

litrball = {'Grant', 'Morgan', 'Evans', 'Gibson', 'Jackson', 'Barlow', 'Adams'}


# set.intersection_update(other); set &= other, set1 & set2 пересечение множеств
# diff_set = set_a.difference(set_b)  разница между множествами

set


all = tennis | dota | litrball   # все люди в одном множестве
# print(all)



all1 = tennis.intersection(dota, litrball)   # люди, которые занимаются всем
print('interested in everything', all1)

a = all.difference(tennis)
print('interested in everything except tennis ' , a)

b = all.difference(dota)
print('interested in everything except dota ' , b)

c = all.difference(litrball)
print('interested in everything except litrball ' , c)

d = all.difference(litrball, dota)
print('only interested in tennis ' , d)

e = all.difference(litrball, tennis)
print('only interested in dota ' , e)

f = all.difference(dota, tennis)
print('only interested in litrball ' , f)


















